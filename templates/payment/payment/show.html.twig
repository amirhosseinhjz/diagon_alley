{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ payment.type }}</td>
            </tr>
            <tr>
                <th>PaidAmount</th>
                <td>{{ payment.paidAmount }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ payment.status }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ payment.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_payment_index') }}">back to list</a>

    <a href="{{ path('app_payment_payment_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payment/payment/_delete_form.html.twig') }}
{% endblock %}
